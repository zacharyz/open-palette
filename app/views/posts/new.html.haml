.container
  .content
    = form_for @post, :html=>{:multipart =>true} do |f|
      - if @post.errors.any?
        #error_explanation
          %h2
            = pluralize(@post.errors.count, "error") 
            prohibited this post from being saved:

          %ul
            - @post.errors.full_messages.each do |msg|
              %li
                = msg
      %fieldset
        %legend New Post
        .clearfix
          = f.label :title
          .input
            = f.text_field :title
        .clearfix
          .input
            = f.file_field :image
        .clearfix
          = f.label :remote_image_url, "or image URL:"
          .input
            = f.text_field :remote_image_url
        .clearfix
          = f.label :content, "Description"
          .input
            = f.text_area :content, :class=>"xlarge", :rows=>"3"
            .help-block Provide a description for your picture. 
        .clearfix
          = f.label :tag_list, "Tags"
          .input
            = f.text_field :tag_list
            .help-block Tags help categorize the posts. Separate tags with commas. 
        .actions
          = f.submit "Cancel", :class=>"btn"
          = f.submit "Submit", :class=>"btn primary"
    

