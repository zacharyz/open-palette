.container
  .content
    - flash.each do |key, value|
      .alert-message.fade.in{:"data-alert"=>"alert", :class=> key}
        %a.close{:href=>"#"} Ã—                                
        %p
          = value   
      - flash.delete(key)                              
    .row 
      .span12
        %h1 
          = @post.title
        = image_tag(@post.image_url, :alt=>@post.title)
      .span4
        .sidebar
          .post-author                            
            = gravatar_for @post.user, :size => 48
            = @post.user.name
          %hr
          .post-description
            = @post.content  
          %hr
          .hearts
            = pluralize(@post.hearts.count, "hearts")
          
    = render 'layouts/footer'                          