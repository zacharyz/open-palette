$('.main').html("<%= escape_javascript(render 'shared/feed_posts') %>");

$(function(){        
  var $container = $('.main .posts');
  $container.imagesLoaded(function(){
    $container.masonry({
      itemSelector : '.post',
      columnWidth : 240
    });
  });  
  $('.post').popover({
    offset: 0,
	html: true,
	animate: true,
	placement: 'right'
  }) 
});
