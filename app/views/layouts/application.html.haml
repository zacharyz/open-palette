!!! Strict                                
%html
  %head
    %title 
      = title
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Pacifico"
    = javascript_include_tag "application"
  %body
    = render 'layouts/header'
    = yield
    = render 'shared/signin_modal'
    - if signed_in?
      = render 'shared/upload'
