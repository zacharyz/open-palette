<% @user ||= current_user %>
<% if @user %>
<% if @user.id %>
<div class="user_info group">
  <div id ="user_image">     
     <a href="<%= user_path(@user) %>"><%= gravatar_for @user, :size => 40 %></a>     
  </div>
  <span class="user_name"><%= link_to @user.name, @user %></span>                                                                     
  <%= render 'shared/stats' %> 
</div>   
<% end %>

<% end %>

