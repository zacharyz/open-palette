<% if (@item_count % 3) == 0 %>
<div class="post group third">
<% else %>
<div class="post group">
<% end %>               
    <span class="image"><a href = "<%= post_path(feed_item) %>">
    <%= image_tag(feed_item.image, :alt=> feed_item.title) %></a></span>
    <div class="gravatar">
         <%= link_to gravatar_for(feed_item.user), feed_item.user %>
         <%= link_to feed_item.user.name, feed_item.user %>
     </div>
</div>