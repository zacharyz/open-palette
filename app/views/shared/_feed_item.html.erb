<% if (@item_count % 3) == 0 %>
<div class="post group third">
<% else %>
<div class="post group">
<% end %>               
    <div id="image" class="group"> 
      <span id="avatar"><%= link_to gravatar_for(feed_item.user), feed_item.user %></span>
      <div id="image_details">
          <div class="left">
                
                <span id="title"><%= link_to feed_item.title, post_path(feed_item) %></span>
                <span id="author"><%= link_to feed_item.user.name, feed_item.user %></span>                 
          </div>
          <% if current_user %>
            <% if current_user.heart?(feed_item) %>
              <div id="hearts" class="hearted right"><%= feed_item.hearts.count %></div>
            <% end %>
          <% else %>        
            <div id="hearts" class="unhearted right"><%= feed_item.hearts.count %></div>
          <% end %>
       </div>
      <%= link_to image_tag(feed_item.image_url(:thumb).to_s, :alt=> feed_item.title),post_path(feed_item)  %>
      
       

    </div>
    
</div>