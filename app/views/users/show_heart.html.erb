<% unless @user.hearts.empty? %>
 <div class="posts group" summary="User posts">
   
   <% @item_count = 0 %>
     <% for post in @posts %>
       <% @item_count = @item_count + 1 %>
       <%= render :partial => "shared/feed_item", :locals => { :feed_item => post} %>
     <% end %>
 </div>
 <%= paginate @posts %>
<% end %>