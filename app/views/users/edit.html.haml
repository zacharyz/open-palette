.container
  .content
    = form_for(@user) do |f|
      = render 'shared/error_messages', :object => f.object
      %fieldset
        %legend Settings
        .clearfix
          = f.label :name
          .input
            = f.text_field :name
        .clearfix
          = f.label :email
          .input
            = f.text_field :email
        .clearfix
          = f.label :password
          .input
            = f.password_field :password
        .clearfix
          = f.label :password_confirmation, "Confirmation"
          .input
            = f.password_field :password_confirmation
        .actions
          = f.submit "Update", :class=>"btn primary"
          = f.submit "Cancel", :class=>"btn"
                          
