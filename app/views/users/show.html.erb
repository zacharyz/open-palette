<div id="main">
   <% unless @user.posts.empty? %>
    <div class="posts group" summary="User posts">
      <% @item_count = 0 %>
        <% for post in @posts %>
          <% @item_count = @item_count + 1 %>
          <%= render post %>
        <% end %>
    </div>
    <%= will_paginate @posts %>
   <% end %>
</div>
<div id="sidebar">
   <%= render 'shared/user_info' %>
   <%= render 'follow_form' if signed_in? %>
</div>
